{
  "name": "@file-flow/backend",
  "version": "1.0.0",
  "private": true,
  "description": "FileFlow serverless backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "node build.js",
    "build:sam": "sam build",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "dev": "sam local start-api",
    "deploy:dev": "sam deploy --stack-name file-flow-dev --parameter-overrides Environment=dev --no-confirm-changeset --no-fail-on-empty-changeset",
    "deploy:staging": "sam deploy --stack-name file-flow-staging --parameter-overrides Environment=staging --confirm-changeset",
    "deploy:prod": "sam deploy --stack-name file-flow-prod --parameter-overrides Environment=prod --confirm-changeset",
    "validate": "sam validate --lint"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-sfn": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "esbuild": "^0.19.11",
    "esbuild-node-externals": "^1.12.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}